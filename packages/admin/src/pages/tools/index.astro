---
import AdminLayout from "@layouts/AdminLayout.astro";
import Modal from "../../components/Modal.astro";
import Button from "../../components/ui/Button.astro";
import {
    Package,
    Zap,
    Wand2,
    ArrowRight,
    RefreshCw,
    Download,
} from "lucide-react";
---

<AdminLayout title="Tools">
    <div class="space-y-8 max-w-4xl">
        <!-- Backups -->
        <div id="backups" class="card">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-lg font-semibold flex items-center gap-2">
                        <Package className="w-5 h-5" /> Content Backups
                    </h2>
                    <p class="text-sm text-admin-muted">
                        Download or restore archived backups of your content.
                    </p>
                </div>
                <Button
                    type="button"
                    id="create-backup-btn"
                    variant="secondary"
                >
                    <Zap className="w-4 h-4 mr-2" /> Create Backup
                </Button>
            </div>

            <div id="backup-list" class="space-y-2">
                <div class="text-center py-8 text-admin-muted">
                    Loading backups...
                </div>
            </div>

            <p class="text-xs text-admin-muted mt-4">
                Backups include all your artwork YAML files and settings. Images
                are not included to save space.
            </p>
        </div>

        <Modal
            id="restore-backup-modal"
            title="Restore Backup"
            confirmText="Restore Backup"
            variant="danger"
        >
            <p class="text-sm text-admin-muted mb-4">
                Restoring a backup will replace your current content. A new
                backup will be created automatically before restoring.
            </p>
            <div
                id="restore-backup-status"
                class="text-sm hidden mb-4"
                aria-live="polite"
            >
            </div>
            <input type="hidden" id="restore-backup-filename" />
        </Modal>

        <!-- Setup Wizard -->
        <div id="setup" class="card">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-lg font-semibold flex items-center gap-2">
                        <Wand2 className="w-5 h-5" /> Setup Wizard
                    </h2>
                    <p class="text-sm text-admin-muted">
                        Configure or troubleshoot your installation.
                    </p>
                </div>
                <a
                    href="/tools/setup"
                    class="btn btn-secondary flex items-center gap-1"
                    >Open Wizard <ArrowRight className="w-4 h-4" /></a
                >
            </div>
        </div>

        <!-- Migrations -->
        <div id="migrations" class="card bg-admin-sidebar/50">
            <div class="flex items-center justify-between">
                <div>
                    <h2
                        class="text-lg font-semibold text-admin-muted flex items-center gap-2"
                    >
                        <RefreshCw className="w-5 h-5" /> Migrations
                    </h2>
                    <p class="text-sm text-admin-muted">
                        Tools for migrating data between storage systems and
                        formats.
                    </p>
                </div>
                <span
                    class="text-xs text-admin-muted bg-admin-bg px-2 py-1 rounded"
                    >Coming Soon</span
                >
            </div>
        </div>
    </div>
</AdminLayout>

<script>
    const backupList = document.getElementById("backup-list");
    const restoreBackupModal = document.getElementById("restore-backup-modal");
    const restoreBackupStatus = document.getElementById(
        "restore-backup-status",
    );
    const restoreBackupFilename = document.getElementById(
        "restore-backup-filename",
    ) as HTMLInputElement | null;

    function formatBytes(bytes: number) {
        if (!bytes) return "0 B";
        const k = 1024;
        const sizes = ["B", "KB", "MB"];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + " " + sizes[i];
    }

    // Create backup button
    document
        .getElementById("create-backup-btn")
        ?.addEventListener("click", async () => {
            const btn = document.getElementById(
                "create-backup-btn",
            ) as HTMLButtonElement;
            btn.disabled = true;
            btn.innerHTML =
                '<svg class="animate-spin h-4 w-4 inline mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Creating...';

            try {
                const res = await fetch("/api/backup", { method: "POST" });
                if (res.ok) {
                    window.dispatchEvent(
                        new CustomEvent("artsitemaker:toast", {
                            detail: {
                                title: "Backup created successfully",
                                variant: "success",
                            },
                        }),
                    );
                    loadBackups();
                } else {
                    window.dispatchEvent(
                        new CustomEvent("artsitemaker:toast", {
                            detail: {
                                title: "Backup failed",
                                variant: "destructive",
                            },
                        }),
                    );
                }
            } catch (e) {
                window.dispatchEvent(
                    new CustomEvent("artsitemaker:toast", {
                        detail: {
                            title: "Backup failed",
                            variant: "destructive",
                        },
                    }),
                );
            } finally {
                btn.disabled = false;
                btn.innerHTML =
                    '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4 mr-2"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg> Create Backup';
            }
        });

    // Restore backup modal handlers
    (window as any).restoreBackup = (filename: string) => {
        if (restoreBackupFilename) restoreBackupFilename.value = filename;
        (restoreBackupModal as any)?.open();
    };

    restoreBackupModal?.addEventListener("close", () => {
        if (restoreBackupStatus) {
            restoreBackupStatus.classList.add("hidden");
            restoreBackupStatus.textContent = "";
        }
    });

    restoreBackupModal?.addEventListener("confirm", async () => {
        const filename = restoreBackupFilename?.value;
        if (!filename) return;

        const confirmBtn = restoreBackupModal.querySelector(
            ".confirm-modal",
        ) as HTMLButtonElement | null;

        if (confirmBtn) {
            confirmBtn.disabled = true;
            confirmBtn.textContent = "Restoring...";
        }

        if (restoreBackupStatus) {
            restoreBackupStatus.textContent = "Restoring backup...";
            restoreBackupStatus.className = "text-sm text-admin-muted";
            restoreBackupStatus.classList.remove("hidden");
        }

        try {
            const res = await fetch(
                `/api/backup/${encodeURIComponent(filename)}`,
                { method: "POST" },
            );
            const data = await res.json();

            if (!res.ok) {
                throw new Error(data.error || "Restore failed");
            }

            if (restoreBackupStatus) {
                restoreBackupStatus.textContent = `✓ Backup restored! Pre-restore backup: ${data.backupFile || "yes"}`;
                restoreBackupStatus.className = "text-sm text-green-400";
            }

            window.dispatchEvent(
                new CustomEvent("artsitemaker:toast", {
                    detail: {
                        title: "Backup restored successfully",
                        variant: "success",
                    },
                }),
            );

            setTimeout(() => {
                window.location.reload();
            }, 2000);
        } catch (e: any) {
            if (restoreBackupStatus) {
                restoreBackupStatus.textContent = `✗ ${e.message}`;
                restoreBackupStatus.className = "text-sm text-red-400";
            }
            if (confirmBtn) {
                confirmBtn.disabled = false;
                confirmBtn.textContent = "Restore Backup";
            }
        }
    });

    // Load backups
    async function loadBackups() {
        try {
            const res = await fetch("/api/backup");
            const backups = await res.json();

            if (!backupList) return;

            if (!backups.length) {
                backupList.innerHTML =
                    '<div class="text-center py-8 text-admin-muted">No backups yet. Create your first backup above.</div>';
                return;
            }

            backupList.innerHTML = backups
                .map(
                    (b: any) => `
        <div class="flex items-center justify-between p-3 bg-admin-sidebar rounded-lg">
          <div class="flex items-center gap-3">
            <div class="text-2xl text-admin-muted">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m7.5 4.27 9 5.15"/><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22v-9"/></svg>
            </div>
            <div>
              <div class="font-medium text-sm">${new Date(b.createdAt).toLocaleDateString()} ${new Date(b.createdAt).toLocaleTimeString()}</div>
              <div class="text-xs text-admin-muted">${b.filename} • ${formatBytes(b.size)}</div>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <button onclick="restoreBackup('${b.filename}')" class="btn btn-sm btn-secondary" title="Restore" aria-label="Restore backup">Restore</button>
            <a href="/api/backup/${b.filename}" class="btn btn-sm btn-secondary flex items-center justify-center" download title="Download" aria-label="Download backup">
              <span class="inline-block w-4 h-4"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg></span>
            </a>
          </div>
        </div>
      `,
                )
                .join("");
        } catch (e) {
            if (backupList) {
                backupList.innerHTML =
                    '<div class="text-center py-8 text-red-400">Failed to load backups</div>';
            }
        }
    }

    loadBackups();
</script>
