---
/**
 * Onboarding Page
 *
 * Shown when no content folder exists (FIRST_RUN state).
 * Provides setup wizard to initialize the project.
 */
import fs from "fs";
import path from "path";
import { getProjectState } from "../../lib/state-manager";
import { getRepoPath } from "../../lib/paths";
import { Hand, Palette, Sparkles, FolderInput, Lightbulb } from "lucide-react";

// Check if we actually need onboarding
const state = getProjectState();

// If not FIRST_RUN, redirect to dashboard
if (state !== "FIRST_RUN") {
    return Astro.redirect("/");
}

const repoRoot = getRepoPath();
const demoContentExists = fs.existsSync(
    path.join(repoRoot, "demo-site", "user-data"),
);
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Welcome to ArtSiteMaker</title>
        <style>
            :root {
                --bg: #0f0f0f;
                --card: #1a1a1a;
                --border: #2a2a2a;
                --text: #e0e0e0;
                --muted: #888;
                --accent: #6366f1;
                --accent-hover: #818cf8;
                --success: #22c55e;
                --warning: #f59e0b;
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family:
                    -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                    sans-serif;
                background: var(--bg);
                color: var(--text);
                min-height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 2rem;
            }

            .container {
                max-width: 600px;
                width: 100%;
            }

            .logo {
                text-align: center;
                margin-bottom: 2rem;
            }

            .logo h1 {
                font-size: 2.5rem;
                font-weight: 300;
                letter-spacing: 0.2em;
                text-transform: uppercase;
            }

            .logo p {
                color: var(--muted);
                margin-top: 0.5rem;
            }

            .card {
                background: var(--card);
                border: 1px solid var(--border);
                border-radius: 12px;
                padding: 2rem;
                margin-bottom: 1.5rem;
            }

            .card h2 {
                font-size: 1.25rem;
                margin-bottom: 1rem;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .card p {
                color: var(--muted);
                margin-bottom: 1.5rem;
                line-height: 1.6;
            }

            .option {
                display: block;
                width: 100%;
                padding: 1rem 1.5rem;
                background: transparent;
                border: 1px solid var(--border);
                border-radius: 8px;
                color: var(--text);
                text-align: left;
                cursor: pointer;
                transition: all 0.2s;
                margin-bottom: 0.75rem;
            }

            .option:hover {
                border-color: var(--accent);
                background: rgba(99, 102, 241, 0.1);
            }

            .option:last-child {
                margin-bottom: 0;
            }

            .option .title {
                font-weight: 500;
                margin-bottom: 0.25rem;
            }

            .option .desc {
                font-size: 0.875rem;
                color: var(--muted);
            }

            .btn-primary {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
                padding: 0.75rem 1.5rem;
                background: var(--accent);
                color: white;
                border: none;
                border-radius: 8px;
                font-size: 1rem;
                cursor: pointer;
                transition: background 0.2s;
                width: 100%;
            }

            .btn-primary:hover {
                background: var(--accent-hover);
            }

            .btn-primary:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

            .status {
                text-align: center;
                padding: 1rem;
                display: none;
            }

            .status.loading {
                display: block;
            }

            .status.success {
                display: block;
                color: var(--success);
            }

            .status.error {
                display: block;
                color: #ef4444;
            }

            .spinner {
                display: inline-block;
                width: 1.5rem;
                height: 1.5rem;
                border: 2px solid var(--border);
                border-top-color: var(--accent);
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }

            @keyframes spin {
                to {
                    transform: rotate(360deg);
                }
            }

            .info-box {
                background: rgba(99, 102, 241, 0.1);
                border: 1px solid rgba(99, 102, 241, 0.3);
                border-radius: 8px;
                padding: 1rem;
                margin-top: 1rem;
                font-size: 0.875rem;
            }

            .info-box code {
                background: var(--bg);
                padding: 0.125rem 0.375rem;
                border-radius: 4px;
                font-size: 0.8rem;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="logo">
                <h1>ArtSiteMaker</h1>
                <p>Artist Portfolio System</p>
            </div>

            <div class="card">
                <h2>
                    <Hand className="w-6 h-6 inline-block mr-2 text-accent" /> Welcome!
                </h2>
                <p>
                    No content folder was found. Let's set up your portfolio.
                    Choose how you'd like to get started:
                </p>

                {
                    demoContentExists && (
                        <button class="option" id="useDemo" type="button">
                            <div class="title flex items-center gap-2">
                                <Palette className="w-5 h-5" /> Start with Demo
                                Content
                            </div>
                            <div class="desc">
                                Use demo site to explore features, then
                                customize
                            </div>
                        </button>
                    )
                }

                <button class="option" id="startFresh" type="button">
                    <div class="title flex items-center gap-2">
                        <Sparkles className="w-5 h-5" /> Start Fresh
                    </div>
                    <div class="desc">
                        Create an empty portfolio with default settings
                    </div>
                </button>

                <button class="option" id="importExisting" type="button">
                    <div class="title flex items-center gap-2">
                        <FolderInput className="w-5 h-5" /> Import Existing Content
                    </div>
                    <div class="desc">
                        Point to an existing content folder or git repository
                    </div>
                </button>
            </div>

            <div class="status" id="status">
                <div class="spinner"></div>
                <p id="statusText">Initializing...</p>
            </div>

            <div class="info-box flex gap-2">
                <Lightbulb className="w-5 h-5 flex-shrink-0 text-accent" />
                <div>
                    <strong>Tip:</strong> Content is stored separately from the ArtSiteMaker
                    system, so you can update ArtSiteMaker without affecting your
                    portfolio data. Content goes in <code>/user-data/</code> (gitignored)
                    or a separate repository.
                </div>
            </div>

            <script>
                const statusEl = document.getElementById(
                    "status",
                ) as HTMLDivElement | null;
                const statusText = document.getElementById(
                    "statusText",
                ) as HTMLSpanElement | null;

                function showStatus(message: string, type = "loading") {
                    if (statusEl) statusEl.className = "status " + type;
                    if (statusText) statusText.textContent = message;
                }

                function hideStatus() {
                    if (statusEl) statusEl.className = "status";
                }

                async function initProject(mode: string) {
                    showStatus("Initializing project...");

                    try {
                        const response = await fetch("/api/system/init", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ mode }),
                        });

                        const result = await response.json();

                        if (result.success) {
                            showStatus(
                                "Setup complete! Redirecting...",
                                "success",
                            );
                            setTimeout(() => {
                                window.location.href = "/";
                            }, 1500);
                        } else {
                            showStatus(
                                "Error: " + (result.error || "Unknown error"),
                                "error",
                            );
                        }
                    } catch (err: any) {
                        showStatus(
                            "Error: " + (err?.message || "Unknown error"),
                            "error",
                        );
                    }
                }

                document
                    .getElementById("useDemo")
                    ?.addEventListener("click", () => {
                        initProject("demo");
                    });

                document
                    .getElementById("startFresh")
                    ?.addEventListener("click", () => {
                        initProject("fresh");
                    });

                document
                    .getElementById("importExisting")
                    ?.addEventListener("click", () => {
                        // TODO: Show import dialog
                        alert(
                            "Import functionality coming soon! For now, manually create /content folder or set SITE_PROJECT_PATH in .env",
                        );
                    });
            </script>
        </div>
    </body>
</html>
