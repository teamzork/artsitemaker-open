---
// packages/site/src/pages/service/[slug].astro
// Service pages template - clean, readable layout for Terms, Privacy, etc.

import PageLayout from '@layouts/PageLayout.astro';
import { marked } from 'marked';
import { isPageEnabled } from '../../lib/pageTypes';
import type { PageData } from '../../types/content';
import { loadPage, listPages } from '../../lib/content-service';

// Check if service pages are enabled
if (!await isPageEnabled('service')) {
  return Astro.redirect('/');
}

export async function getStaticPaths() {
  const pages = await listPages({
    onlyPublished: true,
    predicate: (page) => page.pageType === 'service',
  });

  return pages.map((page) => ({
    params: { slug: page.slug },
  }));
}

const { slug } = Astro.params;

const page: PageData | null = await loadPage(slug);
if (!page) {
  console.error(`Service page ${slug} not found`);
}

// Parse markdown content
const parsedContent = page?.content ? await marked.parse(page.content) : '';
---

{page ? (
<PageLayout title={page.title}>
  <article class="service-page">
    <div class="service-content">
      <h1 class="service-title">{page.title}</h1>
      
      {parsedContent ? (
        <div class="prose" set:html={parsedContent} />
      ) : (
        <p class="text-muted">No content available.</p>
      )}
    </div>
  </article>
</PageLayout>
) : (
<PageLayout title="Not Found">
  <div class="service-page">
    <div class="service-content text-center py-20">
      <h1 class="text-3xl mb-4" style="color: var(--color-text-muted)">Page not found</h1>
      <a href="/" class="nav-link">‚Üê Back to Gallery</a>
    </div>
  </div>
</PageLayout>
)}

<style>
  .service-page {
    min-height: 100vh;
    padding: 40px 20px 80px;
    /* No background image - use solid color */
    background: var(--color-background);
  }
  
  .service-content {
    max-width: 720px;
    margin: 0 auto;
  }
  
  .service-title {
    font-family: var(--font-body, 'DimkaSans', sans-serif);
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-text);
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  /* Typography for content */
  .prose {
    font-family: var(--font-body, 'DimkaSans', sans-serif);
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-text);
  }
  
  .prose :global(h2) {
    font-family: var(--font-body, 'DimkaSans', sans-serif);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .prose :global(h2:first-child) {
    margin-top: 0;
  }
  
  .prose :global(h3) {
    font-family: var(--font-body, 'DimkaSans', sans-serif);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .prose :global(p) {
    margin-bottom: 1rem;
  }
  
  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .prose :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .prose :global(strong) {
    font-weight: 600;
    color: var(--color-text);
  }
  
  .prose :global(a) {
    color: var(--color-link, var(--color-accent));
    text-decoration: none;
  }
  
  .prose :global(a:hover) {
    text-decoration: underline;
  }
  
  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }
  
  .text-muted {
    color: var(--color-text-muted);
  }
  
  @media (max-width: 768px) {
    .service-page {
      padding: 20px 16px 60px;
    }
    
    .service-title {
      font-size: 1.75rem;
    }
    
    .prose {
      font-size: 0.95rem;
    }
  }
</style>
